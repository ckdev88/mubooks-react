{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": [
            "./node_modules",
            "./.git",
            "./dist",
            "./src/main.tsx"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 90,
        "bracketSpacing": true
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "useExhaustiveDependencies": "warn"
            },
            "suspicious": {
                "noArrayIndexKey": "info"
            },
            "style": {
                "useTemplate": "off"
            }
        },
        "ignore": [
            "**/*.test.*"
        ]
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded",
            "quoteStyle": "double"
        }
    }
}
